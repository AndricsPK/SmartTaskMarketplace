@model WebApp.Models.UserViewModel

<h2>User Details</h2>

<dl class="row">
    <dt class="col-sm-2">Username</dt>
    <dd class="col-sm-10">@Model.Username</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.Role</dd>
</dl>

<a class="btn btn-primary" href="@Url.Action("Edit", new { id = Model.Id })">Edit</a>
<a class="btn btn-secondary" href="@Url.Action("Index")">Back</a>
