@model WebApp.Models.TaskItemViewModel

@{
    ViewData["Title"] = "Delete Task";
}

<h2>Delete Task</h2>

<h4>Are you sure you want to delete this task?</h4>

<div>
    <h5>@Model.Title</h5>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Client:</strong> @Model.ClientId</p>
    <p><strong>Freelancer:</strong> @(string.IsNullOrEmpty(Model.FreelancerId) ? "Not assigned" : Model.FreelancerId)</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>

